{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },

        {
            "label": "新建build文件夹",
            "detail": "用于新建存放编译后二进制程序的build文件夹",
            // 快捷键："ctrl+alt+n space",
            "type": "shell",
            "icon": {
                "color": "terminal.ansiRed",
                "id": "file-directory-create"
            },
            "command": "if(Test-Path '${fileDirname}\\build'){echo '已存在build'}else{mkdir '${fileDirname}\\build' > $null;echo '完成build的创建'}",
            "group": "build",
            "presentation": {
                "echo": true,
                "close": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
            }
        },
        {
            "label": "C/C++程序编译",
            "detail": "编译C语言程序源代码",
            //快捷键：ctrl+alt+b space
            "type": "shell",
            "icon": {
                "color": "terminal.ansiRed",
                "id": "archive"
            },
            // 加入-g后端口方能回显执行的命令信息，否则没有回显
            // "command": "g++ -Wall -std=c++17 -g -fexec-charset=GB2312 '${file}' -o '${fileDirname}\\build\\${fileBasenameNoExtension}.exe'",
            "command": "gcc",
            "args": [
                "-Wall",
                "-std=c17",
                "-g",
                "-fexec-charset=GB2312",
                "'${file}'",
                "-o",
                "'${fileDirname}\\build\\${fileBasenameNoExtension}.exe'",
                // "-lwsock32", //使用socket库时，需要加上这个参数
                // "-lcurl", //使用curl库时，需要加上这个参数
                //"-lregex", //使用正则表达式regex库时，需要加上这个参数
                //"-lpcre2-16" //使用正则表达式pcre2库时，需要加上这个参数
            ],
            "group": "build",
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "close": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "onProblem",
            },
            "dependsOn": [
                "新建build文件夹"
            ]
        },
        {
            "label": "C/C++程序运行",
            "detail": "运行当前C代码编译后的程序",
            //快捷键：ctrl+alt+l space
            "type": "shell",
            "promptOnClose": true,
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "run"
            },
            "command": "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build"
            },
            "runOptions": {
                "instanceLimit": 10,
            },
            "presentation": {
                "echo": true,
                "close": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "C/C++程序编译并运行",
            "detail": "进行C程序编译，并在完成后自动运行",
            //快捷键：ctrl+alt+l space
            "type": "shell",
            "promptOnClose": true,
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "run"
            },
            "command": "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "C/C++程序编译"
            ],
            "runOptions": {
                "instanceLimit": 10,
            },
            "presentation": {
                "echo": true,
                "close": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "onProblem"
            }
        }






    ],
    "version": "2.0.0"
}